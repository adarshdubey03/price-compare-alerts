{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared": ["../../packages/shared/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../packages/shared/**/*.ts"
  ]
}
